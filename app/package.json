{
  "name": "ideas-down-quickly",
  "main": "expo-router/entry",
  "version": "1.2.0",
  "scripts": {
    "start": "expo start",
    "db:generate": "npx drizzle-kit generate",
    "register:ios": "eas device:create",
    "move-to-ios-build-dir": "rm -rf ./builds/ios && mkdir -p ./builds/ios && mv *.ipa ./builds/ios",
    "build:ios:local:development": "eas build -p ios --local --profile dev && yarn move-to-ios-build-dir",
    "build:ios:cloud:internal": "eas build --profile internal -p ios && yarn move-to-ios-build-dir",
    "build:ios:local:internal": "eas build -p ios --local --profile internal && yarn move-to-ios-build-dir",
    "build:ios:cloud:production": "eas build --profile production -p ios",
    "build:ios:local:production": "eas build -p ios --local --profile production && yarn move-to-ios-build-dir",
    "submit:ios": "eas submit -p ios --profile production",
    "move-to-android-build-dir": "rm -rf ./builds/android && mkdir -p ./builds/android && (mv *.apk ./builds/android || true) && (mv *.aab ./builds/android || true)",
    "build:android:local:development": "eas build -p android --local --profile dev && yarn move-to-android-build-dir",
    "build:android:local:internal": "eas build -p android --local --profile internal && yarn move-to-ios-build-dir",
    "build:android:local:production": "eas build -p android --local --profile production && yarn move-to-android-build-dir",
    "submit:android": "eas submit -p android --profile production",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "move-apk-to-device": "./scripts/move-to-android.sh"
  },
  "jest": {
    "preset": "jest-expo"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.0",
    "@fontsource/montserrat": "^5.0.18",
    "@react-native-async-storage/async-storage": "^1.23.1",
    "@react-navigation/native": "^6.0.2",
    "@sentry/react-native": "^5.24.1",
    "drizzle-orm": "^0.31.0",
    "expo": "~51.0.9",
    "expo-constants": "~16.0.2",
    "expo-dev-client": "~4.0.18",
    "expo-document-picker": "^12.0.2",
    "expo-file-system": "^17.0.1",
    "expo-font": "~12.0.6",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.14",
    "expo-sharing": "^12.0.1",
    "expo-splash-screen": "~0.27.4",
    "expo-sqlite": "^14.0.3",
    "expo-status-bar": "~1.12.1",
    "expo-store-review": "~7.0.2",
    "expo-system-ui": "~3.0.4",
    "expo-web-browser": "~13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.1",
    "react-native-element-dropdown": "^2.12.1",
    "react-native-gesture-handler": "^2.17.1",
    "react-native-get-random-values": "^1.11.0",
    "react-native-paper": "^5.12.3",
    "react-native-safe-area-context": "4.10.1",
    "react-native-screens": "3.31.1",
    "react-native-vector-icons": "^10.1.0",
    "react-native-web": "~0.19.10",
    "runtypes": "^6.7.0",
    "use-async-effect": "^2.2.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "babel-plugin-inline-import": "^3.0.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.22.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.1",
    "prettier": "^3.3.0",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
